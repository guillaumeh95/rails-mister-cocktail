<div class="container">
  <h1 class="text-center">CocktailFever</h1>

  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.4) 50%), url('https://source.unsplash.com/random')">
            <%= link_to "", cocktail_path(cocktail), class:"card-link" %>
            <div>
              <h2 class="title"><%= cocktail.name.capitalize %></h2>
                <% cocktail.doses.each do |dose| %>
                  <p class="hidden">
                    <%= dose.ingredient.name %>
                    <i class="fa fa-glass" aria-hidden="true"></i>
                    <%= dose.description %>
                  </p>
                <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this dose?" } %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Go back", cocktails_path %></p>

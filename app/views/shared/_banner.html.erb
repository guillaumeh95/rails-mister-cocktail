<div class="banner" style="background-image: linear-gradient(-225deg, rgba(37, 53, 79, 0.4) 0%, rgba(37, 53, 79, 0.4) 50%), url('<%= cl_image_path @cocktail.photo, height: 500, width: 500 %>')">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
    <div class="cocktail-details">
      <div class="cocktail-description">
        <p>Description</p>
      </div>
      <div class="cocktail-ingredients">
        <h3> Ingredients
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li class="ingredient">
                <%= dose.description %>
                <%= dose.ingredient.name %>
                <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this dose?" } %>
              </li>
            <% end %>
          </ul>
        </h3>
      </div>
    </div>

    <p><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>
    <p class="card-previous btn btn-danger"><%= link_to "Check Other Cocktails", cocktails_path %></p>
  </div>
</div>

